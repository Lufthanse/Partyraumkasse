<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_extras"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEL"
        android:layout_width="411dp"
        android:layout_height="123dp"
        android:background="#170C30"
        app:cardBackgroundColor="#170C30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="#352065"
            android:minHeight="50dp">

            <TextView
                android:id="@+id/tv_uhrzeitEv"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="117dp"
                android:layout_marginLeft="117dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="239dp"
                android:layout_marginRight="239dp"
                android:layout_marginBottom="48dp"
                android:text="Uhrzeit"
                android:textColor="#C2185B" />

            <TextView
                android:id="@+id/tv_datumEv"
                android:layout_width="67dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="311dp"
                android:layout_marginRight="311dp"
                android:layout_marginBottom="50dp"
                android:text="Datum"
                android:textColor="#C2185B" />

            <TextView
                android:id="@+id/tv_bezeichnungEv"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="3dp"
                android:text="Bezeichnung"
                android:textColor="#C2185B" />

            <TextView
                android:id="@+id/tv_hinweisEv"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bezeichnungEv"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="41dp"
                android:text="Hinweise"
                android:textColor="#C2185B" />

            <TextView
                android:id="@+id/tv_ortEv"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bezeichnungEv"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="196dp"
                android:layout_marginLeft="196dp"
                android:layout_marginTop="12dp"
                android:text="Ort"
                android:textColor="#C2185B" />

            <ImageView
                android:id="@+id/btn_deleteEv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="354dp"
                android:layout_marginLeft="354dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                app:srcCompat="@drawable/ic_delete"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>