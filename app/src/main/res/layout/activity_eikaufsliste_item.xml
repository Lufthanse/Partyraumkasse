<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEL"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="#170C30"
        android:backgroundTint="#170C30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayoutEL"
            android:layout_width="412dp"
            android:layout_height="45dp"
            android:background="#352065"
            android:minHeight="50dp">

            <ImageButton
                android:id="@+id/btn_deleteEL"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="337dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="7dp"
                android:background="#352065"
                app:srcCompat="@drawable/ic_delete"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/btn_checkEL"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="289dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="78dp"
                android:layout_marginBottom="7dp"
                android:backgroundTint="#352065"
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/tv_beschreibungEL"
                android:layout_width="265dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="126dp"
                android:layout_marginBottom="15dp"
                android:text="Beschreibung"
                android:textColor="#C2185B" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>