<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_extras"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#512DA8"
        android:minHeight="50dp"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tv_nameEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="102dp"
            android:layout_marginEnd="234dp"
            android:layout_marginRight="234dp"
            android:layout_toEndOf="@+id/btn_deleteEL"
            android:layout_toRightOf="@+id/btn_deleteEL"
            android:text="Name"
            android:textColor="#170C30" />

        <TextView
            android:id="@+id/tv_pizzaEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-150dp"
            android:layout_marginLeft="93dp"
            android:layout_toEndOf="@+id/tv_nameEL"
            android:layout_toRightOf="@+id/tv_nameEL"
            android:text="Grund"
            android:textColor="#170C30" />

        <ImageButton
            android:id="@+id/btn_doneEL"
            android:layout_width="38dp"
            android:layout_height="60dp"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_toEndOf="@+id/tv_pizzaEL"
            android:layout_toRightOf="@+id/tv_pizzaEL"
            app:srcCompat="@android:drawable/checkbox_on_background" />

        <ImageButton
            android:id="@+id/btn_deleteEL"
            android:layout_width="38dp"
            android:layout_height="60dp"
            android:background="#512DA8"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:id="@+id/tv_moneyEL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nameEL"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="13dp"
            android:hint="Geldbetrag"
            android:textColor="#170C30" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>